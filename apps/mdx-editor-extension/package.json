{
  "name": "mdx-editor",
  "displayName": "MDX Editor with Component Support",
  "description": "Advanced MDX editor with component autocomplete, preview, and snippets",
  "version": "0.1.0",
  "publisher": "orangec-at",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mdx",
    "onCommand:mdx-editor.preview",
    "onCommand:mdx-editor.insertBlock"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mdx",
        "aliases": [
          "MDX",
          "mdx"
        ],
        "extensions": [
          ".mdx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mdx",
        "scopeName": "text.html.markdown.mdx",
        "path": "./syntaxes/mdx.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mdx-editor.preview",
        "title": "MDX: Open Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "mdx-editor.insertBlock",
        "title": "MDX: Insert Block"
      },
      {
        "command": "mdx-editor.refreshRegistry",
        "title": "MDX: Refresh Component Registry"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mdx-editor.preview",
          "when": "editorLangId == mdx",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mdx-editor.preview",
          "when": "editorLangId == mdx"
        },
        {
          "command": "mdx-editor.insertBlock",
          "when": "editorLangId == mdx"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mdx-editor.preview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == mdx"
      },
      {
        "command": "mdx-editor.insertBlock",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorLangId == mdx"
      }
    ],
    "configuration": {
      "title": "MDX Editor",
      "properties": {
        "mdxEditor.registryPath": {
          "type": "string",
          "default": "src/lib/mdx-registry.ts",
          "description": "Path to MDX component registry file"
        },
        "mdxEditor.blocksPath": {
          "type": "string",
          "default": "src/lib/document-blocks.ts",
          "description": "Path to document blocks file"
        },
        "mdxEditor.previewEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time preview"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle:preview && npm run compile",
    "compile": "tsc -p ./",
    "bundle:preview": "node ./scripts/build-preview.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/react": "^19.x",
    "@types/react-dom": "^19.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "gray-matter": "^4.0.3",
    "next-mdx-remote": "^6.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
